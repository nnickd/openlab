<div class="callout medium-2">
    Goal
    <%= number_to_currency pool.goal %><br>
    Pledged
    <%= number_to_currency pool.pledged %><br>
    Progress
    <%= number_to_percentage pool.progress, precision: 2 %><br>
    <div class="success progress">
        <div class="progress-meter" style="width: <%= pool.visual_progress%>%"></div>
    </div>
    Days Left
    <%= pool.days_left %><br>
    Number of backers
    <%= pool.backers %>
</div>

<%= render 'payments/checkout', payment: @payment, pool: @project.pool if current_user != @project.user %>
