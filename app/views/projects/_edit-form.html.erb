<div class="reveal" id="edit-project" data-reveal>
    <%= form_for(project) do |f| %>

    <% if project.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(project.errors.count, "error") %>
            prohibited this project from being saved:</h2>

        <ul>
            <% project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <% if project.postable? %>
    <%= f.label :posted %>
    <%= f.text_field :posted %>
    <% end %>

    <%= f.submit 'edit project', class: 'button expanded' %>

    <% end %>
</div>

<a data-open="edit-project" class="button">edit</a>
